<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#000</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">#000</item>
    </style>

    <style name="roboto_black">
        <item name="android:fontFamily">@string/font_fontFamily_medium</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="roboto_gray">
        <item name="android:fontFamily">@string/font_fontFamily_medium</item>
        <item name="android:textColor">#979797</item>
    </style>

    <style name="futura_black">
        <item name="android:fontFamily">@font/futur</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="futura_black_bold">
        <item name="android:fontFamily">@font/futurabold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="futura_med_black">
        <item name="android:fontFamily">@font/futuramed</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>
