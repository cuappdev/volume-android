<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:id="@+id/publication_banner"
        android:src="@drawable/banner_template"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

<!--    <de.hdodenhof.circleimageview.CircleImageView-->
<!--        android:id="@+id/profile_image"-->
<!--        android:layout_width="0dp"-->
<!--        android:layout_height="80dp"-->
<!--        android:src="@drawable/logo_template"-->
<!--        app:civ_border_color="#FFFFFF"-->
<!--        app:civ_border_width="3dp"-->
<!--        app:layout_constraintLeft_toLeftOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        android:layout_marginTop="95dp"/>-->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/publication_logo"
        app:layout_constraintBottom_toBottomOf="@+id/publication_banner"
        app:layout_constraintTop_toTopOf="@id/publication_banner"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/logo_template"
        android:layout_marginTop="135dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/publicantion_name"
        android:textSize="18dp"
        android:text="Publication Name"
        app:layout_constraintTop_toBottomOf="@+id/publication_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        style="@style/begum_black_bold"
        android:layout_marginLeft="15dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/follow_button"
        app:layout_constraintTop_toTopOf="@+id/publicantion_name"
        app:layout_constraintBottom_toBottomOf="@+id/publicantion_name"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp">

        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_greyrect"
            android:layout_marginRight="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/follow_button"
            app:layout_constraintTop_toTopOf="@+id/follow_button"
            app:layout_constraintRight_toRightOf="@+id/follow_button"
            app:layout_constraintBottom_toBottomOf="@id/follow_button"
            android:text="+ Follow"
            android:textColor="#D07000"
            android:textSize="15dp"
            style="@style/futura_black_bold"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/count_holder"
        app:layout_constraintLeft_toLeftOf="@+id/publicantion_name"
        app:layout_constraintTop_toBottomOf="@+id/publicantion_name">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/begum_grey"
            android:textSize="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="10 articles"
            android:id="@+id/article_count"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/begum_grey"
            app:layout_constraintLeft_toRightOf="@+id/article_count"
            app:layout_constraintTop_toTopOf="@id/article_count"
            app:layout_constraintBottom_toBottomOf="@+id/article_count"
            android:text="."
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:id="@+id/dot"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shout_count"
            android:textSize="12dp"
            app:layout_constraintLeft_toRightOf="@+id/dot"
            app:layout_constraintTop_toTopOf="@+id/article_count"
            android:text="205 shout-outs"
            style="@style/begum_grey"
            android:layout_marginLeft="10dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:id="@+id/publication_description"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        android:text="We are a group of passionate food enthusiasts who come together to publish a diversity of recipes, articles and stories. Once each semester, we publish our magazine CrÃ¨me de Cornell to highlight a theme in our submitted writings. "
        app:layout_constraintTop_toBottomOf="@+id/count_holder"
        style="@style/helvetica_black"
        android:textSize="14dp"
        android:layout_marginTop="5dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/publicantion_name"
        app:layout_constraintTop_toBottomOf="@id/publication_description"
        android:layout_marginTop="10dp"
        android:id="@+id/social_media_holder">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/insta_holder"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/insta_pic"
                android:src="@drawable/ic_insta"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/insta_text"
                android:text="Instagram"
                style="@style/helvetica_orange"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/insta_pic"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="5dp"
                android:textSize="12dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fb_holder"
            app:layout_constraintLeft_toRightOf="@+id/insta_holder"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fb_pic"
                android:src="@drawable/ic_fb"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fb_text"
                android:text="Facebook"
                style="@style/helvetica_orange"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/fb_pic"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="5dp"
                android:textSize="12dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/link_holder"
            app:layout_constraintLeft_toRightOf="@+id/fb_holder"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/link_pic"
                android:src="@drawable/ic_link"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/link_text"
                android:text="cremedecornell.net"
                app:layout_constraintLeft_toRightOf="@+id/link_pic"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="5dp"
                style="@style/helvetica_orange"
                android:textSize="12dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/divider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/social_media_holder"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_divider"
        android:layout_marginTop="40dp"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/article_title"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintLeft_toLeftOf="@id/publicantion_name"
        android:src="@drawable/ic_articles"
        android:layout_marginTop="40dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/article_rv"
        app:layout_constraintTop_toBottomOf="@+id/article_title"/>






</androidx.constraintlayout.widget.ConstraintLayout>