<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="10dp"
    app:cardBackgroundColor="#00FFFFFF"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/saved_article_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/pub_name_article_layout_b"
            style="@style/begum_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Creme de Cornell"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/article_title_b"
            style="@style/helvetica_bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="10dp"
            android:text="Sangkhaya: Thai Pandan Custard Dip"
            android:maxLines="2"
            android:textSize="16sp"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/article_img_b"
            app:layout_constraintTop_toBottomOf="@id/pub_name_article_layout_b" />

        <ImageView
            android:id="@+id/article_img_b"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/creamy_white"
            android:scaleType="fitXY"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@color/creamy_white"
            tools:srcCompat="@color/creamy_white" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/desc_holder_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/dot_b"
            style="@style/helvetica_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" â€¢ "
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/post_time_b" />

        <TextView
            android:id="@+id/post_time_b"
            style="@style/helvetica_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6h ago"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/article_shout_count_b"
            style="@style/helvetica_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123 shout-outs"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/dot_b" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_bookmark_filled"
            app:layout_constraintStart_toEndOf="@id/article_shout_count_b"
            app:layout_constraintBottom_toBottomOf="@id/article_shout_count_b"
            app:layout_constraintTop_toTopOf="@id/article_shout_count_b"
            android:layout_marginStart="10.5dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>