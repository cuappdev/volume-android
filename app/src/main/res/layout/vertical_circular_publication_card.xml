<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vert_cert_layout"
    android:layout_width="90dp"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/vertical_publication_logo"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/cremelogotrans"/>

    <TextView
        android:id="@+id/vertical_publication_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="12dp"
        style="@style/begum_black_bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/vertical_publication_logo"
        app:layout_constraintLeft_toLeftOf="@+id/vertical_publication_logo"
        app:layout_constraintRight_toRightOf="@id/vertical_publication_logo"
        android:text="Creme de Cronell"/>


</androidx.constraintlayout.widget.ConstraintLayout>