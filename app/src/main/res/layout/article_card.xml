<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_below="@+id/article_layout"
    android:id="@+id/article_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/creamy_white"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/article_title"
        style="@style/helvetica_bold"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Sangkhaya: Thai Pandan Custard Dip"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/article_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/grey"
        tools:srcCompat="@color/grey" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/desc_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:id="@+id/post_time"
            style="@style/helvetica_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6h ago"
            android:textSize="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/dot"
            style="@style/helvetica_gray"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/smalldot"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/post_time"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/article_shout_count"
            style="@style/helvetica_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="15 shout-outs"
            android:textSize="10dp"
            app:layout_constraintLeft_toRightOf="@+id/dot"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>