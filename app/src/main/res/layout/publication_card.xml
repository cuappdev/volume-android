<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    app:cardBackgroundColor="@color/creamy_white"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/other_pub_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/publication_card_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/cremelogotrans"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/publication_card_name"
            style="@style/begum_black_bold"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Creme de Cornell"
            android:textSize="18dp"
            app:layout_constraintLeft_toRightOf="@id/publication_card_logo"
            app:layout_constraintTop_toTopOf="@id/publication_card_logo" />

        <TextView
            android:id="@+id/publication_card_description"
            style="@style/roboto_gray"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="A description about Creme de Cornell"
            android:textSize="12dp"
            app:layout_constraintLeft_toLeftOf="@id/publication_card_name"
            app:layout_constraintTop_toBottomOf="@id/publication_card_name" />

        <ImageView
            android:id="@+id/publication_card_smallline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_smalllinesvg"
            app:layout_constraintLeft_toLeftOf="@id/publication_card_description"
            app:layout_constraintTop_toBottomOf="@id/publication_card_description" />

        <TextView
            android:id="@+id/publication_card_quote"
            style="@style/roboto_black"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text=' "We cream for Cornell" '
            android:textSize="12dp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintBottom_toBottomOf="@id/publication_card_smallline"
            app:layout_constraintLeft_toRightOf="@id/publication_card_smallline"
            app:layout_constraintTop_toTopOf="@id/publication_card_smallline" />

            <ImageView
                android:id="@+id/publication_card_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_followplussvg"
                android:layout_marginEnd="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/publication_card_name"
                android:contentDescription="@string/follow_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>