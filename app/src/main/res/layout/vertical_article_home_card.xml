<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="#00FFFFFF"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/big_read_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/vert_img_view"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@color/grey"
            tools:srcCompat="@color/grey" />

        <TextView
            android:id="@+id/vert_card_pub_name"
            style="@style/begum_black"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:text="TextView"
            android:textSize="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vert_img_view" />

        <TextView
            android:id="@+id/article_title_big_read"
            style="@style/helvetica_bold"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Top 6 Ice Cream Places in Ithaca: Ranked"
            android:textSize="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vert_card_pub_name" />

        <TextView
            android:id="@+id/big_read_card_layout_time"
            style="@style/helvetica_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:text="2h ago"
            android:textSize="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vert_img_view" />

        <TextView
            android:id="@+id/big_read_card_layout_dot"
            style="@style/helvetica_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:text=" â€¢ "
            android:textSize="10dp"
            app:layout_constraintStart_toEndOf="@id/big_read_card_layout_time"
            app:layout_constraintTop_toBottomOf="@id/vert_img_view" />

        <TextView
            android:id="@+id/big_read_card_layout_shoutouts"
            style="@style/helvetica_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:text="123 shout-outs"
            android:textSize="10dp"
            app:layout_constraintStart_toEndOf="@id/big_read_card_layout_dot"
            app:layout_constraintTop_toBottomOf="@id/vert_img_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>